{% extends "GRGameficatorBundle::layout.html.twig" %}

{% block title %}
    <title>Gamificator | Mon Projet</title>
{% endblock title %}

{% block pageheader %}
<div class="pageheader">
    <div class="media">
        <div class="pageicon pull-left">
            <i class="fa fa-file"></i>
        </div>
        <div class="media-body">
            <ul class="breadcrumb">
                <li><a href="{{ path('gr_gameficator_homepage') }}"><i class="glyphicon glyphicon-home"></i></a></li>
                <li>Dashboard</li>
                <li>Projets</li>
                <li>{{project.name}}</li>
            </ul>
            <h4>{{project.name}}</h4>
        </div>
    </div><!-- media -->
</div><!-- pageheader -->
{% endblock %}

{% block body %}

{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
<div class="row">
     <div class="col-sm-6">
       <div class="form-group">
           <label class="col-sm-2 control-label">Nom du projet</label>
           <div class="col-sm-8">
               {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
            </div>
            {{ form_errors(form.name) }}
     </div>
       </div><!-- form-group -->

</div>

<div class="row">
       <div class="col-sm-6"><div class="form-group">
           <label class="col-sm-2 control-label">Objectif(s)</label>
           <div class="col-sm-8">
               {{ form_widget(form.objectives, { 'attr': {'class': 'form-control'} }) }}
               </div>
               {{ form_errors(form.objectives) }}
         </div><!-- form-group -->
         </div>

       <div class="col-sm-6"><div class="form-group">
           <label class="col-sm-2 control-label">Priorité</label>
           <div class="col-sm-8">
               {{ form_widget(form.priority, { 'attr': {'class': 'form-control'} }) }}
            </div>
                {{ form_errors(form.priority) }}
         </div><!-- form-group --></div>
</div>
<div class="row">
         <div class="col-sm-6"><div class="form-group">
           <label class="col-sm-2 control-label">Motivations positives</label>
           <div class="col-sm-8">
               {{ form_widget(form.motivationplus, { 'attr': {'class': 'form-control'} }) }}
            </div>
              {{ form_errors(form.motivationplus) }}
         </div><!-- form-group --></div>
         <div class="col-sm-6"><div class="form-group">
           <label class="col-sm-2 control-label">Motivations négatives</label>
           <div class="col-sm-8">
             {{ form_widget(form.motivationneg, { 'attr': {'class': 'form-control'} }) }}
          </div>
          {{ form_errors(form.motivationneg) }}
         </div><!-- form-group --></div>
</div>
<div class="row">
         <div class="col-sm-6"><div class="form-group">
           <label class="col-sm-2 control-label">Phrase de remotivation</label>
           <div class="col-sm-8">
              <input type="text" class="form-control">
            </div>
         </div><!-- form-group -->
       </div>
       <div class="col-sm-6"><div class="form-group">
           <label class="col-sm-2 control-label">Couleur</label>
           <div class="col-sm-6">
              {{ form_widget(form.color, {'id': 'colorpicker', 'attr': {'class': 'form-control colorpicker-input'} }) }}
               <span id="colorSelector" class="colorselector">
                  <span></span>
              </span>
            </div>
         </div><!-- form-group -->
       </div>
</div>

<div class="form-group">
      <div class="pull-left">
          {{ form_widget(form.save, {'label': 'Mettre à jour', attr:{ 'class': 'btn btn-success'}}) }}
      </div>

</div>



{{ form_end(form) }}



</div><!-- row -->

{% endblock %}

{% block script %}

<script type="text/javascript">

  // Color Picker
    if(jQuery('#colorpicker').length > 0) {
      jQuery('#colorSelector').ColorPicker({
        onShow: function (colpkr) {
          jQuery(colpkr).fadeIn(500);
          return false;
        },
        onHide: function (colpkr) {
          jQuery(colpkr).fadeOut(500);
          return false;
        },
        onChange: function (hsb, hex, rgb) {
          jQuery('#colorSelector span').css('backgroundColor', '#' + hex);
          jQuery('#colorpicker').val('#'+hex);
        }
      });
    }
</script>

{% endblock %}
