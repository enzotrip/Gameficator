{% extends "GRGameficatorBundle::layout.html.twig" %}

{% block title %}
    <title>Gamificator | New Project</title>
{% endblock title %}

{% block pageheader %}
<div class="pageheader">
    <div class="media">
        <div class="pageicon pull-left">
            <i class="fa fa-file"></i>
        </div>
        <div class="media-body">
            <ul class="breadcrumb">
                <li><a href="{{ path('gr_gameficator_homepage') }}"><i class="glyphicon glyphicon-home"></i></a></li>
                <li>Dashboard</li>
                <li>Créer un projet</li>
            </ul>
            <h4>Créer un projet</h4>
        </div>
    </div><!-- media -->
</div><!-- pageheader -->
{% endblock %}

{% block body %}

{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
<div class="row">
     <div class="col-sm-6">
       <div class="form-group">
           <label class="col-sm-2 control-label">Nom du projet</label>
           <div class="col-sm-8">
               {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
            </div>
            {{ form_errors(form.name) }}
     </div>
       </div><!-- form-group -->

       <div class="col-sm-6"><div class="form-group">
           <label class="col-sm-2 control-label">Topics</label>
           <div class="col-sm-8">
               <input type="text" class="form-control">
            </div>
         </div><!-- form-group --></div>
</div>

<div class="row">
       <div class="col-sm-6"><div class="form-group">
           <label class="col-sm-2 control-label">Objectif(s)</label>
           <div class="col-sm-8">
               {{ form_widget(form.objectives, { 'attr': {'class': 'form-control'} }) }}
               </div>
               {{ form_errors(form.objectives) }}
         </div><!-- form-group -->
         </div>

       <div class="col-sm-6"><div class="form-group">
           <label class="col-sm-2 control-label">Priorité</label>
           <div class="col-sm-8">
               {{ form_widget(form.priority, { 'attr': {'class': 'form-control'} }) }}
            </div>
                {{ form_errors(form.priority) }}
         </div><!-- form-group --></div>
</div>
<div class="row">
         <div class="col-sm-6"><div class="form-group">
           <label class="col-sm-2 control-label">Motivations positives</label>
           <div class="col-sm-8">
               {{ form_widget(form.motivationplus, { 'attr': {'class': 'form-control'} }) }}
            </div>
              {{ form_errors(form.motivationplus) }}
         </div><!-- form-group --></div>
         <div class="col-sm-6"><div class="form-group">
           <label class="col-sm-2 control-label">Motivations négatives</label>
           <div class="col-sm-8">
             {{ form_widget(form.motivationneg, { 'attr': {'class': 'form-control'} }) }}
          </div>
          {{ form_errors(form.motivationneg) }}
         </div><!-- form-group --></div>
</div>
<div class="row">
         <div class="col-sm-6"><div class="form-group">
           <label class="col-sm-2 control-label">Phrase de remotivation</label>
           <div class="col-sm-8">
              <input type="text" class="form-control">
            </div>
         </div><!-- form-group --></div>
</div>

<div class="form-group">
      <div class="pull-left">
          {{ form_widget(form.save, { 'attr': {'value': 'Create Task', 'class': 'btn btn-success'}}) }}
      </div>

</div>



{{ form_end(form) }}



</div><!-- row -->

{% endblock %}
