{% extends "GRGameficatorBundle::layout.html.twig" %}

{% block title %}
    <title>Gamificator | Tasks To Do</title>
{% endblock title %}

{% block pageheader %}
<div class="pageheader">
    <div class="media">
        <div class="pageicon pull-left">
            <i class="fa fa-th-list"></i>
        </div>
        <div class="media-body">
            <ul class="breadcrumb">
                <li><a href="{{ path('gr_gameficator_homepage') }}"><i class="glyphicon glyphicon-home"></i></a></li>
                <li>Tasks</li>
                <li>Tasks To Do</li>
                <li class="pull-right"><a href="{{ path('gr_gameficator_createtask') }}"><button class="btn btn-primary"><i class="fa fa-plus"> </i> Add New Task</button></a></li>
            </ul>
            <h4>Tasks To Do</h4>
        </div>
    </div><!-- media -->
</div><!-- pageheader -->
{% endblock %}

{% block body %}

<div class="panel panel-primary-head">

    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
            <th>Nom</th>
            <th>Projets li√©s</th>
            <th>Topic</th>
            <th>Statut</th>
            <th>Date limite</th>
            </tr>
        </thead>

        <tbody>
          {% for task in listTasks %}
            <tr>
                <td><a href="{{ path('gr_gameficator_viewtask', {'id': task.id}) }}">{{ task.name }}</a></td>
                <td><span class="label label-warning">{% if task.project.user != null %} {{task.project.name}} {% endif %}</span></td>
                <td></td>
                <td><span class="badge">A faire</span></td>
                <td>{{task.deadline | date("d/m/y")}}</td>
            </tr>
          {% endfor %}
        </tbody>
    </table>
</div><!-- panel -->

<br />

<script type="text/javascript">
    $(document).ready(function() {
        $('#example').DataTable();
    } );
</script>

{% endblock %}
